<script src="jquery-3.4.1.js"></script>
<script>
    $(function () {
        $('body').css({
            'text-align':'center',
            'backgroundColor':'black',
            'paddingtop':'50px'
        }


        )
        $('.form').css(
            {
                'width':'1000px',
                'height':'500px',
                'text-align':'center',
                'margintop':'50px',
                'margin':'auto',


            }
        )
        $('.form ul').css({

            'listStyleType':'none',
            'width': '1000px',
            'height':'400px',
        });
        $('ul li').css(
            {
                'float':'left',
                'width':'300px',
                'height':'200px',
                'padding':'5px',
            }
        )
        $('ul').css(
            {
                'margintop':'50px',
            }
        )
        $('.center').css({
                'marginleft':'50px',
                'marginright':'50px',
        }

        )

        $('img').css({
            'width':'300px',
            'height':'200px',
        })

        $('.form').find('li').mouseenter(function () {
            // $('this').css('opacity',1);
            $(this).css('opacity',1).siblings('li').css('opacity',0.4);
        })
        $('.form').mouseleave(function () {
            //在这个离开事件中，this是整个大盒子
            //$(this).css('opacity',1);
            $(this).find('li').css('opacity',1);
        })


    })
</script>
