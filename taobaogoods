<script src="jquery-3.4.1.js"></script>
<script>
    $(function () {

        $('#left>li,#right>li').mouseenter(function () {
            $(this).css({
                'background':'skyblue',
            })
        })
        $('#left>li,#right>li').mouseleave(function () {
            $(this).css({
                'background':'#ffdcdc',
            })
        })

        //不能设置a标签的移入事件，因为li下的a标签都没有兄弟节点
        //所以a标签索引都是0，不能拿到正确的索引
        $('#left>li').mouseenter(function () {
            //索引表示的是在兄弟节点之间的排行
            var index=$(this).index();
            // $('#center>li:eq('     +     index   +  ')'     );//字符串的拼接
            $('#center>li').eq(index).show().siblings('li').hide();//eq方法
        })
        $('#right>li').mouseenter(function () {
            //索引表示的是在兄弟节点之间的排行
            var index=$(this).index();
            index+=3;
            // $('#center>li:eq('     +     index   +  ')'     );//字符串的拼接
            $('#center>li').eq(index).show().siblings('li').hide();//eq方法
        })
    })
</script>
